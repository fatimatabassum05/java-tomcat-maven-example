pipeline{
    agent { label 'master' }
    environment{
        IMAGE_TAG = "${BUILD_NUMBER}"
    }
    stages{
       stage('Git Checkout Stage'){
            steps{
                git branch: 'main', url: 'https://github.com/sindhukampli/java-tomcat-maven-example.git'
            }
         }        
        stage('Build docker Image'){
          steps{
            sh 'docker build -t skampli31/docker1-jenkins:IMAGE_TAG .'
          }
        }
        stage('Push To Dockerhub'){
          steps{
            sh 'docker push skampli31/docker1-jenkins:IMAGE_TAG'
          }
        }
        stage('Deploy Stage') {
          steps{
            sh 'helm install helm helm -n dev'
          } 
        }
    }
}
